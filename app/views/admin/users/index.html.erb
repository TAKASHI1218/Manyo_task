<h1>管理画面のユーザー一覧画面</h1>




  <table border="3" cellpadding="25" class = user_list>
    <thead>
      <tr bgcolor="#ccccc">
        <th>ユーザーid</th>
        <th>ユーザー名</th>
        <th>メール</th>
        <th>タスク数</th>
        <th>Function</th>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr class = task_list>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>

      <td><%="{index.count}"  %></td>





    <td>
      <%= link_to t('view.show_detail'), admin_user_path(user.id) %>
      <%= link_to t('view.edit'), edit_admin_user_path(user.id) %>
      <%= link_to t('view.delete'), admin_user_path(user.id), method: :delete %>

      <% end %>

    </td>
    </tr>


  </table>

  <br>

    <button type="button" div class ="create_new_user label-info">
    <%= link_to t('view.create_new'), new_admin_user_path %>
    </button>
